{
	"name": "@silky/fizzy-mcp",
	"version": "0.2.0",
	"description": "MCP server for Fizzy task management",
	"author": "David GÃ³mez",
	"homepage": "https://github.com/davegomez/fizzy-mcp",
	"license": "AGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/davegomez/fizzy-mcp.git"
	},
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.12.1",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"fizzy-mcp": "./dist/index.js"
	},
	"keywords": [
		"mcp",
		"fizzy",
		"task-management"
	],
	"files": [
		"dist",
		"!dist/test"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"test": "vitest",
		"test:run": "vitest run",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"check": "biome check . && tsc --noEmit",
		"start": "node dist/index.js",
		"changelog": "changelogen",
		"release": "changelogen --bump --release",
		"release:dry": "changelogen --bump --release --dry"
	},
	"dependencies": {
		"fastmcp": "^3.28.0",
		"marked": "^17.0.1",
		"parse-link-header": "^2.0.0",
		"turndown": "^7.2.2",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/node": "^25.0.10",
		"@types/parse-link-header": "^2.0.3",
		"@types/turndown": "^5.0.6",
		"changelogen": "^0.6.2",
		"msw": "^2.12.7",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
